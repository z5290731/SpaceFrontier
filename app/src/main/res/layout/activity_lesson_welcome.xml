<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_239908"
    tools:context=".LessonWelcomeActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="313dp"
        android:layout_height="142dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_corner_textview"
        android:fontFamily="@font/electrolize"
        android:gravity="center"
        android:text="Welcome to Jupiter! I am sure you must be tired after a long trip! I would love for you to understand what makes me spin, take a lesson below! If you are feeling risky and want to fly into my big red spot, take the quiz directly below!"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planetKawaiiNPC" />

    <ImageView
        android:id="@+id/planetKawaiiNPC"
        android:layout_width="127dp"
        android:layout_height="113dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jupiter" />

    <Button
        android:id="@+id/button2"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:layout_marginStart="52dp"
        android:background="@drawable/capsulebutton"
        android:backgroundTint="#3B3B47"
        android:fontFamily="@font/electrolize"
        android:text="Lesson"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:tint="#3B3B47"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/button3"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/capsulebutton"
        android:backgroundTint="#3B3B47"
        android:fontFamily="@font/electrolize"
        android:text="Take Quiz"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/capsulebutton"
        android:backgroundTint="#3B3B47"
        android:fontFamily="@font/electrolize"
        android:text="Video Lesson"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="132dp"
        android:layout_height="54dp"
        android:background="@drawable/capsulebutton"
        android:backgroundTint="#3B3B47"
        android:fontFamily="@font/electrolize"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="#2B2B35"
        android:fontFamily="@font/electrolize"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/planetKawaiiNPC"
        app:layout_constraintTop_toTopOf="@+id/planetKawaiiNPC" />

    <ImageButton
        android:id="@+id/exitButton2"
        android:layout_width="51dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="6dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="#B3B3B8"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
